{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "commit-roulette",
  "displayName": "Commit Roulette",
  "description": "Random chaos after each commit - all reversible",
  "version": "0.1.0",
  "repository": {
    "type": "github",
    "url": "https://github.com/maverickkamal/Commit-Roulette"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands":[
      {
        "command": "commitRoulette.undoCurse",
        "title": "Commit Roulette: Undo Current Curse"
      },
      {
        "command": "commitRoulette.showStats",
        "title": "Commit Roulette: Show Statistics"
      },
      {
        "command": "commitRoulette.testCurse",
        "title": "Commit Roulette: Trigger Test Curse"
      }
    ],
    "configuration": {
      "title": "Commit Roulette",
      "properties": {
        "commitRoulette.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable Commit Roulette"
        },
        "commitRoulette.probability": {
          "type": "number",
          "default": 1,
          "minimum": 0,
          "maximum": 100,
          "description": "Curse trigger chance (0-100%)"
        },
        "commitRoulette.enabledCurses": {
          "type": "array",
          "default": [
            "Color Inverter",
            "Comic Sans Theme",
            "Placebo Curse",
            "Variable Reverser",
            "Indent Switcher",
            "Emoji Injector",
            "Sound Effect",
            "Keyboard Lagger",
            "Australian Mode",
            "The Jitterbug (File Hopper)"
          ],
          "description": "List of enabled curses."
        },
        "commitRoulette.soundVolume": {
          "type": "number",
          "default": 50,
          "description": "Volume for sound effects (0-100)"
        },
        "commitRoulette.curseDuration": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "description": "Duration of temporary curses in minutes"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  },
  "dependencies": {
    "simple-git": "^3.19.1"
  }
}
